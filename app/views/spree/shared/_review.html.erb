<div class="review-details-pro col-lg-12 col-md-12 col-sm-12 cloth-pd">

  <ul>
    <div itemprop="reviews" itemscope itemtype="http://schema.org/Review">
      <li>
        <p><%= review.created_at.to_date.strftime("%m/%d/%Y") %></p>
      </li>
      <li class="reviews-rating" title="<%= txt_stars(review.rating) %>">
        <%= render 'spree/reviews/stars', stars: review.rating %>
      </li>
      <li itemprop="name"><%= review.title %></li>
      <li itemprop="datePublished" content="<%= review.created_at.to_date.strftime("%m/%d/%Y") %>"></li>
      <li itemprop="reviewRating" content="<%= review.rating %>"></li>
      <% if review.show_identifier %>
        <% if Spree::Reviews::Config[:show_email] && review.user %>
          <li itemprop="author"><p><%= review.user.email %></p></li>
        <% else %>
          <li itemprop="author"><p><%= review.name %></p></li>
        <% end %>
      <% else %>
        <li itemprop="author"><p><%= Spree.t(:anonymous) %></p></li>
      <% end %>

      <% if Spree::Reviews::Config[:feedback_rating] && (!Spree::Reviews::Config[:require_login] || spree_current_user) %>
        <div class="feedback_review" id="feedback_review_<%= review.id %>">
          <%= render 'spree/feedback_reviews/form', review: review %>
        </div>
      <% end %>
    </div>
  </ul>



  <p><%= simple_format(review.review.slice(0, 299)) %>
    <span id="dots">...</span><p id="more">
    <%= simple_format(review.review).slice(299, review.review.length) %></p></p>
  <span onclick="readMoreFunction()" id="myBtn">Read more</span>
  
  </div>
</div>
<% if @product.reviews.length > 1 && @product.reviews.first != review %>
  <div class="clearfix"></div>
  <div class="dvd"></div>
  <div class="clearfix"></div>
<% end %>

<script>
  $('#myBtn').trigger('click')
  readMoreFunction();
</script>